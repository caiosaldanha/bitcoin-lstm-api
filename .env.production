# Configuração para produção com Dokploy
# Usado automaticamente pelo Docker Compose

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Domain Configuration
DOMAIN=lstm.ml.caiosaldanha.com
PROTOCOL=https

# Model Configuration
MODEL_EPOCHS=10
MODEL_BATCH_SIZE=1
SEQUENCE_LENGTH=40
TRAIN_TEST_SPLIT=0.8

# Data Configuration
BITCOIN_SYMBOL=BTC-USD
START_DATE=2018-01-01

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin123

# TensorFlow Configuration
TF_CPP_MIN_LOG_LEVEL=2
PYTHONUNBUFFERED=1

# Docker Configuration
COMPOSE_PROJECT_NAME=bitcoin-lstm

# Traefik Configuration
TRAEFIK_NETWORK=dokploy-network
CERT_RESOLVER=letsencrypt
